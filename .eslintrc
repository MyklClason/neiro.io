env:
  node: true
  mocha: true
  es6: true

globals:
  req: true
  rewire: true

rules:
  no-new-object: 2
  no-reserved-keys: 2
  no-array-constructor: 2
  quotes: [2, "single"]
  indent: [2, 2]
  no-multi-str: 2
  no-multi-spaces: 2
  no-shadow-restricted-names: 2
  dot-notation: 2
  vars-on-top: 2
  no-unused-vars: 2
  eqeqeq: 2
  use-isnan: 2
  no-eq-null: 2
  brace-style: 2
  spaced-line-comment: 2
  # valid-jsdoc: 2
  space-infix-ops: 2
  eol-last: 2
  padded-blocks: [2, "never"]
  space-before-blocks: 2
  comma-dangle: [2, "never"]
  comma-style: 2
  semi: [2, always]
  semi-spacing: 2
  no-extra-boolean-cast: 2
  space-before-function-paren: [2, "never"]
  no-spaced-func: 2
  no-wrap-func: 2
  one-var: [2, "never"]
  camelcase: 2
  new-cap: 2
  consistent-this: [1, "_this"]
  key-spacing: 2
  no-dupe-keys: 2
  strict: 2
  no-extra-parens: [1, true]
  complexity: [1, 4]
  no-self-compare: 1
  no-throw-literal: 2
  no-void: 1
  no-unused-expressions: 0
  no-mixed-requires: 2
  no-new-require: 2
  max-nested-callbacks: 1, 4
  no-multiple-empty-lines:
    - 1
    -
      max: 1
  no-var: [2, true]
  generator-star-spacing: [1, both]
  max-len: [1, 80, 2]
  no-underscore-dangle: [0, false]
